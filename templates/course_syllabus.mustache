{{!
    Course Header for Syllabus
}}
<div class="course-syllabus" id="syllabusContent-{{courseid}}">
    <div class="card">
        {{#syllabustitle}}
        <div class="card-header" id="courseSyllabusHeader-{{courseid}}">
            <span class="title">{{ syllabustitle }}</span>
            <button class="btn btn-link"
                    type="button"
                    data-toggle="collapse"
                    data-target="#syllabusContentCollapsible-{{courseid}}"
                    aria-expanded="true"
                    aria-controls="syllabusContentCollapsible-{{courseid}}"
                    aria-label="{{# str }} collapse {{/ str }}">
                {{# pix }} i/collapsed, theme_savoir {{/ pix }}

            </button>
        </div>
        {{/syllabustitle}}
        <div id="syllabusContentCollapsible-{{courseid}}" class="collapse show" aria-labelledby="courseSyllabusHeader-{{courseid}}" data-parent="#syllabusContent-{{courseid}}">
            <div class="card-body">
                {{{ content }}}
            </div>
        </div>
    </div>
</div>